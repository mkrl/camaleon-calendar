<div class='panel panel-default'>
    <div class='panel-heading'>
        <h4><%= t('plugin.calendar.settings_title') %></h4>
    </div>
    <div class='panel-body'>
        <%= form_tag(url_for(action: :save_settings), class: 'validate') do %>
            <div class='form-group'>
                <label><%= t('plugin.calendar.types_settings') %></label>
                <%= select_tag('options[calendar_post_type]', options_from_collection_for_select(current_site.post_types.decorate, 'id', 'the_title', @calendar_type), 'class'=> 'form-control select') %>
            </div>
            <div class='form-group'>
                <label><%= t('plugin.calendar.week_start') %></label>
                <%= select_tag 'options[calendar_week_start]', options_for_select(week_days.first(2).zip(0..1), @dotw), class: 'form-control required' %>
            </div>
            <%= render partial: 'camaleon_cms/admin/settings/custom_fields/render', locals: {record: @plugin, field_groups: @plugin.get_field_groups} %>
            <div class='form-group text-right'>
                <%= submit_tag t('plugin.calendar.settings_save'), class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
</div>